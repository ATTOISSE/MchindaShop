{% extends 'base.html.twig' %}

{% block title %}Page panier
{% endblock %}

{% block body %}
	{{include('navbar.html.twig')}}
	<div class="container mt-5">
		<h2 class="text-info text-center ">Gestion du panier</h2>
		<table class="table mt-3">
			<thead>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantit√©</th>
				<th>Total</th>
				<th>Action</th>
			</thead>
			<tbody>
				{% set formattedTotal = total | number_format(2, ',', ' ') %}
				{% for el in data %}
					<tr>
						{% set totale = el.product.price * el.quantity %}
						{% set formattedPrice = el.product.price | number_format(2, ',', ' ') %}
						{% set formattedPU =  totale | number_format(2, ',', ' ') %}
						<td>
							{{el.product.wording}}
						</td>
						<td>
							{{formattedPrice}}
						</td>
						<td>
							{{el.quantity}}
						</td>
						<td>{{formattedPU}}</td>
						<td>
							<a href="{{path('panier_add',{id:el.product.id})}}"><i class="bi bi-plus-circle-dotted btn btn-primary"></i></a>
							<a href="{{path('panier_remove',{id:el.product.id})}}"><i class="bi bi-dash-circle-dotted btn btn-info"></i></a>
							<a href="{{path('panier_delete',{id:el.product.id})}}"><i class="bi bi-trash btn btn-danger"></i></a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<th colspan="3" class="text-center">Total</th>
					<td>{{formattedTotal}}</td>
					<td><a href="{{path('panier_empty')}}" class="btn btn-secondary">Vider le panier</a></td>	
				</tr>
			</tfoot>

		</tfoot>
		<tr></tr>
	</table>
</div>{% endblock %}
